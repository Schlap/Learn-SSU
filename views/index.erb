<html>
<head>
<title>SSU Task Board</title>
</head>
<body>
  <h1>SSU Task Board</h1>
  <div class="new-task">
    <form action="/tasks" method="post">
      Title: <input type="text" name="title">
      Description: <input type="text" name="description">
      Tags: <input type="text" name="tags">
      <input type="submit" value="Submit">
    </form>
  </div>
  <div class="task-feed">
    <ul>
      <% @tasks.each do |task| %>
        <li><a href="<%= task.description %>"><%= task.title %></a></li>
      <% end %>
    </ul>
  </div>
</body>
</html>
